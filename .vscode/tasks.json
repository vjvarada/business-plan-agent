{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Agent Environment",
      "type": "shell",
      "command": ".\\setup.ps1",
      "windows": {
        "command": "powershell",
        "args": [
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          ".\\setup.ps1"
        ]
      },
      "linux": {
        "command": "bash",
        "args": [
          "./setup.sh"
        ]
      },
      "osx": {
        "command": "bash",
        "args": [
          "./setup.sh"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Activate Virtual Environment",
      "type": "shell",
      "command": ".venv\\Scripts\\Activate.ps1",
      "windows": {
        "command": "powershell",
        "args": [
          "-ExecutionPolicy",
          "Bypass",
          "-Command",
          "& .venv\\Scripts\\Activate.ps1"
        ]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Requirements",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "dependsOn": "Activate Virtual Environment",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}